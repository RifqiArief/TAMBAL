<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">

    <!-- Top White Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="513dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/settingsProfileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:background="@android:color/darker_gray"
            android:clickable="true"
            android:clipToOutline="true"
            android:contentDescription="Profile Image"
            android:focusable="true"
            android:scaleType="centerCrop" />

        <!-- Full Name Input -->
        <EditText
            android:id="@+id/et_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alata"
            android:hint="Enter Full Name"
            android:textColor="@color/off_white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/alata"
            android:text="Save Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/off_white"
            android:textSize="18sp"
            app:backgroundTint="@color/pink_600"
            app:cornerRadius="30dp"
            app:rippleColor="@color/ripple_color" />

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/alata"
            android:hint="Enter New Password"
            android:inputType="textPassword"
            android:textColor="@color/off_white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/alata"
            android:text="Change Password"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/off_white"
            android:textSize="18sp"
            app:backgroundTint="@color/pink_600"
            app:cornerRadius="30dp"
            app:rippleColor="@color/ripple_color" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_upgrade_mechanic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/alata"
            android:text="Upgrade to Mechanic"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/off_white"
            android:textSize="18sp"
            app:backgroundTint="@color/pink_600"
            app:cornerRadius="30dp"
            app:rippleColor="@color/ripple_color" />
    </LinearLayout>

    <!-- Bottom Blue Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_main_blue"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Upgrade to Mechanic Button -->

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Go Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/alata"
            android:text="Go Back"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/off_white"
            android:textSize="18sp"
            app:backgroundTint="@color/pink_600"
            app:cornerRadius="30dp"
            app:rippleColor="@color/ripple_color" />
    </LinearLayout>
</LinearLayout>